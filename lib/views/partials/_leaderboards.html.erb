<div class="container">
  <div class="row">
    <h2>Leaderboards</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Place</th>
          <th>Nickname</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |record| %>
          <tr>
            <td><%= record.place %>.</td>
            <td><%= record.name %></td>
            <td><%= record.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

